@model IEnumerable<GoGaming.Models.AvisoViewModel>
@using PracticaDSMGenNHibernate.EN.DSMPracticas;


@{
    ViewBag.Title = "IndexUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int idUsuario = -1;

    if (Session["Usuario"] != null)
    {
        idUsuario = ((UsuarioEN)Session["Usuario"]).Id;
    }
}

<h2>Tus Avisos</h2>
@if (idUsuario != -1 && ((UsuarioEN)Session["Usuario"]).Administrator)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

@if (Model.Count() == 0)
{
    <h3>No tienes Avisos. ¡Sigue haciendo las cosas así de bien!</h3>
}
else
{
    <div class="table">

        @foreach (var item in Model)
        {
            <div>
                @Html.DisplayFor(modelItem => item.Texto)
            </div>
            <div>
                @Html.DisplayFor(modelItem => item.Hora)
            </div>
        }
    </div>
}



